<html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>Tech Blog</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" type="text/css" href="/css/dashboard.css"/>
    </head>
    <body class="bg-light text-gray">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-success">
                <div class="container-fluid">
                    <a class="navbar-brand fs-2" href="/"><strong>Tech Blog</strong></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/"><strong>Home</strong></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/dashboard"><strong>Dashboard</strong></a>
                            </li>
                            {{#if logged_in}}
                            <li class="nav-item">
                                <a class="nav-link text-light" href="#" id="techBlog-logout"><strong>Log Out</strong></a>
                            </li>
                            {{else}}
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/login"><strong>Log In</strong></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/signup"><strong>Sign Up</strong></a>
                            </li>
                            {{/if}}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container" style="margin-bottom: 12vh;">
            {{{body}}}
        </div>
        <footer class="bg-success text-light py-2" style="position: fixed; bottom: 0; width:100%;">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-4 text-center">
                        <h3>&copy; 2023 Thank You for Contributing to the Tech Blog</h3>
                    </div>
                </div>
            </div>
        </footer>
        <script src="/js/signup.js"></script>
        <script src="/js/login.js"></script>
        <script src="/js/logout.js"></script>
        <script src="/js/new-post.js"></script>
        <script src="/js/new-comment.js"></script>
        <script src="/js/edit-post.js"></script>
        <script src="/js/delete-post.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>