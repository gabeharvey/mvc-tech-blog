<main class="container mt-3">
    <h1 class="mb-2">User Login</h1>
    <form class="techBlog-login-form">
        <div class="mb-2">
            <label for="username" class="form-label">User Name</label>
            <input type="text" class="form-control" id="username-techBlog-login" placeholder="User Name"/>
        </div>
        <div class="mb-2">
            <label for="password" class="form-label">User Password</label>
            <input type="password" class="form-control" id="password-techBlog-login" placeholder="User Password"/>
        </div>
        <button type="submit" class="btn btn-success">User Login</button>
    </form>
</main>